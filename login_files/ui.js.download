    function cargarSeleccionActual() {
        var seleccion = [];
        var table = $('#tblSeleccion tbody');
        var index = 0;
        for (var i = 0; i < table.length; i++) {
            if (i % 2 != 0) {
                var value = table.eq(i).find('input.checked').first();
                seleccion[i] = {
                    input: value,
                    aviable: function () {
                        if (value) {
                            return value.length != 0
                        } else {
                            return false;
                        }
                    } ()
                };
            }
        }

        return seleccion
    }
